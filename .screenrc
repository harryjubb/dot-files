# set the message for activity
activity "activity: window ~%"

# refresh the whole window when the terminal resizes
allpartial off

# change to the home directory for a new window
#chdir

# set the scroll back limit
defscrollback 2000

# always show the status line and configure it
hardstatus on
hardstatus alwayslastline
hardstatus string "%{= wg}Screens: %{= wb}%-w%{= BW} %n %t %{-}%+w %=%{m}%D %Y%m%d %C%a "
# previous attempts...
#hardstatus string "%{=r g} Screens: %{b}%w %=%{g}%C%a %D, %Y%m%d "
#hardstatus string "%w%=%m/%d %c"

# start a new window with the hostname as a title
shelltitle $HOST

# don't show the startup message
startup_message off

# set the visual bell string
vbell_msg "bell: window ~%"

